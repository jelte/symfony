<div id="sidebar-search">
    <form action="{{ path('_profiler_search') }}" method="get">
        <div class="form-group">
            <label for="ip">IP</label>
            <input type="text" name="filters[method]" id="ip" value="{{ filters.ip is defined ? filters.ip : null}}">
        </div>

        <div class="form-group">
            <label for="method">Method</label>
            <select name="method" id="method">
                <option value=""{{ filters.method is not defined or '' == filters.method ? ' selected="selected"' : '' }}>Any</option>
                {% for m in ['DELETE', 'GET', 'HEAD', 'PATCH', 'POST', 'PUT'] %}
                    <option{{ filters.method is defined and m == filters.method ? ' selected="selected"' : '' }}>{{ m }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="url">URL</label>
            <input type="text" name="filters[url]" id="url" value="{{ filters.url is defined ? filters.url : null }}">
        </div>

        <div class="form-group">
            <label for="token">Token</label>
            <input type="text" name="filters[url]" id="url" value="{{ filters.url is defined ? filters.url : null }}">
        </div>

        <div class="form-group">
            <label for="start">From</label>
            <input type="date" name="start" id="start" value="{{ start }}">
        </div>

        <div class="form-group">
            <label for="end">Until</label>
            <input type="date" name="end" id="end" value="{{ end }}">
        </div>

        <div class="form-group">
            <label for="limit">Results</label>
            <select name="limit" id="limit">
                {% for l in [10, 50, 100] %}
                    <option {{ l == limit ? 'selected="selected"' }}>{{ l }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-sm">Search</button>
        </div>
    </form>
</div>
